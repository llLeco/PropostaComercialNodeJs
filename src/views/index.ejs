<%- include('includes/head'); %>
    <%- include('includes/nav'); %>


    <% if(usuario !=null) { %>


        <div class="container text-center my-4">

                <div id="headPage" class="row align-items-center justify-content-center mb-3" style="height: 200px; background-color: rgb(235, 235, 235);">
                    <div class="imgHeader">
                    </div>
                    <div class="col-md-12">
                        <h1 class="text-center">Página Inicial</h1>
                        <p>Crie, edite e exclua suas Propostas Comerciais</p>
                    </div>
                </div>


                <div id="allIndexRows" class="row align-items-center justify-content-center mb-3"
                    style="height: 150px; background-color:rgb(210, 210, 210)">

                    <div class="col-6">
                        <h1 style="font-size: 22px;">Crie uma Nova Proposta Comercial</h1>
                    </div>

                    <div class="col-6">
                        <div class="createBtn" id="btn-mainFunctions">
                            <a href="/proposta/index" class="btn btn-primary" style="padding: 0px;">
                                <button type="button" class="btn btn-primary btn-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22"
                                        fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                        <path
                                            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path
                                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                    </svg>
                                </button>
                            </a>
                        </div>
                    </div>

                </div>

                <div id="allIndexRows" class="row align-items-center justify-content-center mb-3"
                    style="height: 150px; background-color: rgb(235, 235, 235);">

                    <div class="col-6">
                        <h1 style="font-size: 22px;">Edite a Tabela de Valores Predefinidos</h1>
                    </div>

                    <div class="col-6">
                        <% if(tabelas.length> 0) { %>
                            <% const numTabelas=tabelas.length - 1; %>

                                <div class="tableBtn" id="btn-mainFunctions">
                                    <a href="/tabela/index/<%= tabelas[numTabelas]._id %>" class="btn btn-dark"
                                        style="padding: 0px;">
                                        <button type="button" class="btn btn-dark btn-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22"
                                                fill="currentColor" class="bi bi-pencil-square"
                                                viewBox="0 0 16 16">
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </button>
                                    </a>
                                </div>

                                <% } %>
                    </div>

                </div>

                <div id="allIndexRows" class="row align-items-center justify-content-center mb-3"
                    style="height: 150px; background-color: rgb(210, 210, 210);">

                    <div class="col-6">
                        <h1 style="font-size: 22px;">Visualizar Todas as Propostas Comercias</h1>
                    </div>

                    <div class="col-6">

                        <div class="previewBtn" id="btn-mainFunctions">
                            <a class="btn btn-primary" style="padding: 0px;">
                                <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="collapse"
                                    data-bs-target="#collapseExample" aria-expanded="false"
                                    aria-controls="collapseExample">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22"
                                        fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z" />
                                    </svg>
                                </button>
                            </a>
                        </div>

                    </div>




                </div>
                
        </div>

    <% } else { %>
        <div class="container">
            <div class="row">
                <div class="col-md-12 my-4 text-center " style="height: 700px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-exclamation-diamond" viewBox="0 0 16 16">
                        <path d="M6.95.435c.58-.58 1.52-.58 2.1 0l6.515 6.516c.58.58.58 1.519 0 2.098L9.05 15.565c-.58.58-1.519.58-2.098 0L.435 9.05a1.482 1.482 0 0 1 0-2.098L6.95.435zm1.4.7a.495.495 0 0 0-.7 0L1.134 7.65a.495.495 0 0 0 0 .7l6.516 6.516a.495.495 0 0 0 .7 0l6.516-6.516a.495.495 0 0 0 0-.7L8.35 1.134z"/>
                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
                      </svg>
                      <br>
                      <br>
                      <hr style="width: 75%; margin: auto">
                      <br>
                    <h1>Faça o login para acessar o sistema</h1>
                    <button type="button" class="btn btn-primary btn-lg my-4"> <a href="/login/index"
                    class="btn btn-primary btn-lg">Entrar no sistema</a>
                    </button>

                </div>
            </div>
        </div>
        
    <% } %>
        

        <div class="container text-center">
            <div class="row">

                <div class="collapse" id="collapseExample" style="padding: 0px;">
                    <div class="card card-body" style="background-color:#ebebeb ;">


                        <div class="container">
                            <div class="row">

                                <% if(propostas.length> 0 ) { %>
                                    <% propostas.forEach((proposta, req)=> { %>
                                        <% if( usuario===proposta.account_id && usuario !=null) { %>


                                            <div class="col-md-3">
                                                <div class="card my-2 " style="margin: 10px;">
                                                <img class="card-img-top" src="/frontend/assets/img/logoiliotcut.png"
                                                    alt="Card image cap" style="width: 50%; margin: auto; padding: 10px;">
                                                <div class="card-body">
                                                    <h5 class="card-title" style="font-size: 14px;">Proposta
                                                        Comercial de <%=proposta.razao_social%>
                                                    </h5>
                                                    <a href="/proposta/index/<%= proposta._id %>"
                                                        class="btn btn-primary my-1" style="font-size: 14px;">Ver ou
                                                        Editar</a>
                                                        <a href="/proposta/delete/<%= proposta._id %>"
                                                            class="btn btn-danger my-1" style="font-size: 14px;">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                            
                                        <% } %>
                                    <% }); %>
                                <% } %>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>




        <%- include('includes/footer'); %>